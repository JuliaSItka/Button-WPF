<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="MyButton" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="427" Margin="196,183,0,0" Height="160" Click="MyButton_Click"  />

        <ComboBox x:Name="SelectColor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="184" Margin="49,99,0,0" Height="28" SelectionChanged="ComboBox_SelectionChanged">
            <TextBlock>red</TextBlock>
            <TextBlock>green</TextBlock>
            <TextBlock>black</TextBlock>
            <TextBlock>Pink</TextBlock>
        </ComboBox>
        <ComboBox x:Name="Shape" HorizontalAlignment="Left" VerticalAlignment="Top" Width="185" RenderTransformOrigin="4.743,6.568" Margin="541,101,0,0" SelectionChanged="ComboBox_SelectionChanged_1">
            <TextBlock>Ellipse</TextBlock>
            <TextBlock>Rectangle</TextBlock>
            <TextBlock>Circle</TextBlock>
            <TextBlock>Square</TextBlock>
            
        </ComboBox>

    </Grid>

</Window>
